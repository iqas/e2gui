#!/bin/sh
echo "################ ECM INFO ########################################"
echo "------------------------------------------------------------------"
sed "s/, /\n/g;s/ = / -> /;s/=//g;s/^ /Used: /;s/ on /\n/;s/ECM//;s/ID /ID: /;\
  s/pid/Pid: /;s/cw\(*.\):/cw\1\:  /g" /tmp/ecm.info
echo "################ ESTADO PEERS  ###################################"
echo "------------------------------------------------------------------"
cat /tmp/mgshare.info | sed "s/newcamd route //"  | more
echo "------------------------------------------------------------------"
echo "################ ACTIVIDAD MGCAMD  ###############################"
echo "------------------------------------------------------------------"
cat /tmp/mgstat.info
echo "------------------------------------------------------------------"



